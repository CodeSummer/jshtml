<!DOCTYPE html>
<html>
<head>
<title>@locals.title</title>
</head>

<body>
<div id="wrapper">

<header>
</header>

<section>
@if(locals.productList && locals.productList.length) {
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
        @for(var productIndex = 0; productIndex < locals.productList.length; productIndex++)   {
            var product = locals.productList[productIndex];
            <tr>
                <td>@(product.name)</td>
                <td>@(product.price)</td>
            </tr>
            }
        </tbody>
    </table>
    }
else{
    <p>
    no products found...
    </p>
    }
</section>

<footer>
</footer>

</div>
</body>
</html>
